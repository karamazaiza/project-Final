<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Arabic">
    <TextView
        android:id="@+id/barHome"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:background="#365989"/>
    <TextView
        android:id="@+id/Home"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Arabic"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/texthome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barHome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Arabic is a Semitic language spoken by
over 300 million people across the Middle East
and North Africa. It is the official language of many
countries and the liturgical
language of Islam, as the Qurâ€™an is written in Arabic. Known for its rich vocabulary, unique script, and deep cultural heritage, Arabic has influenced many
other languages in
science, literature, and philosophy throughout history."
        android:padding="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        />
</RelativeLayout>